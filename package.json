{
  "name": "youtube-feedback-intel",
  "version": "1.0.0",
  "description": "Collect YouTube comments and detect tech/work feedback across multiple languages using YouTube Data API v3",
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "bin": {
    "ytfi": "./dist/cli/index.js"
  },
  "scripts": {
    "build": "npm run build:server && npm run build:client",
    "build:server": "tsc",
    "build:client": "npm --prefix client run build",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "cli": "tsx src/cli/index.ts",
    "server": "tsx src/server/index.ts --port 3000",
    "client": "cd client && npm run dev",
    "mcp": "node dist/mcp/server.js",
    "migrate": "tsx src/db/migrate.ts",
    "seed:demo": "tsx src/scripts/seed-demo.ts",
    "lint": "npm run lint:server && npm run lint:client",
    "lint:server": "eslint src/ --ext .ts",
    "lint:client": "npm --prefix client run lint",
    "lint:fix": "eslint src/ --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "check:modules": "node scripts/check-modules.mjs",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "commander": "^12.1.0",
    "cors": "^2.8.6",
    "dotenv": "^17.2.4",
    "express": "^5.2.1",
    "mysql2": "^3.11.0",
    "pino": "^9.4.0",
    "pino-pretty": "^11.2.0",
    "undici": "^6.19.0",
    "yaml": "^2.5.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/node": "^20.14.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "concurrently": "^9.2.1",
    "eslint": "^8.57.0",
    "nock": "^14.0.0-beta.7",
    "prettier": "^3.3.0",
    "tsx": "^4.19.0",
    "typescript": "^5.5.0",
    "vitest": "^2.0.0"
  }
}
